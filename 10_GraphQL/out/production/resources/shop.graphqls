type Product {
	id: ID!
	title: String!
	description: String!
	imageUrl: String!
	ratings: [Rating]!
	averageRatingScore: Float!
}

type Customer {
	id: ID!
	name: String!
	ratings: [Rating]!
}

type Rating {
	id: ID!
	product: Product
	customer: Customer
	score: Int!
	comment: String!
}

type Query {
	getProduct(productId: ID!): Product
}

type Mutation {
	rateProduct(productId: ID!, customerId: ID!, score: Int!, comment: String!) : Rating!
}

schema {
	query: Query
	mutation: Mutation
}
